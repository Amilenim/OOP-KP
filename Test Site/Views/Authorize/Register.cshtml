@using Test_Site.Controllers
@model RegisterViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body id="unique-body">
    <div class="general">
        <div class="profile-general">
            <h1 class="text-black">Реєстрація</h1>
            <form asp-action="Register" method="post" class="text-black">
                <div class="form-group">
                    <label asp-for="Name">Ім'я:</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Електронна пошта:</label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Мобільний телефон:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">+380</span>
                        </div>
                        <input asp-for="Phone" class="form-control" maxlength="9" required />
                    </div>
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль:</label>
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Підтвердіть пароль:</label>
                    <input asp-for="ConfirmPassword" class="form-control" required />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <button type="submit" class="btn btn-unique-custom mt-2">Зареєструватись</button>
            </form>
        </div>
    </div>
</body>
</html>